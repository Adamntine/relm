{
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules/*"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "commonjs",
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "~*": [
        ".*"
      ]
    },
    "typeRoots": [
      "types"
    ]
  }
}